    <script src="js/scripts.js"></script>


    <h1>總表</h1>
    <%= link_to '新增', new_record_path, class:"btn btn-info", style:"font-size:20px; margin-top:10px; margin-bottom:10px;" %>
      <table class = "table table-striped"> 
        <tbody>
          <% @records.each do |r| %>
            <tr>
              <td> <%= r.longitude%> </td>
              <td > <%= r.latitude%> </td>
              <td > <%= r.device_id%> </td>
              <td align="right" width="50px" style="font-size:20px;"> <%= link_to '查看', record_path(r) %>  </td>
              <td align="right" width="50px" style="font-size:20px;"> <%= link_to '刪除', record_path(r), :method => :delete, :data => { :confirm => "Are you sure?" } %></td> 
            </tr>
          <%end%>
        </tbody>
      </table>


